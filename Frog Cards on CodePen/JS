      </p>`];

let i = 0;

leftBtn.addEventListener("click", function(){
  // --;
  if (i > 0 && i <= theElements.length)
    i--;
  cardDivEl.innerHTML = theElements[i];
})

rightBtn.addEventListener("click", function(){
  // ++;
  if (i == theElements.length - 1)
   {
    i = 0;
    cardDivEl.innerHTML = theElements[i];
   }
  else if (i >= 0 && i < theElements.length - 1)
   {
    i++;  
  cardDivEl.innerHTML = theElements[i];
   }
})
